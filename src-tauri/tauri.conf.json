{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "GBFR Logs",
    "version": "0.141.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "fs": {
        "readFile": true,
        "scope": [
          "$RESOURCE/*",
          "$RESOURCE/lang/*",
          "$RESOURCE/lang/*/*"
        ]
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Meter",
        "label": "main",
        "fullscreen": false,
        "width": 500,
        "height": 350,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "minWidth": 250,
        "minHeight": 120,
        "alwaysOnTop": true,
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --disable-gpu"
      },
      {
        "title": "Logs",
        "label": "logs",
        "url": "/logs",
        "fullscreen": false,
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "closable": true,
        "decorations": true,
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --disable-gpu"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": [
        "msi",
        "updater"
      ],
      "identifier": "com.false",
      "longDescription": "GBFR Logs - DPS Meter for Granblue Fantasy: Relink",
      "shortDescription": "GBFR Logs",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "hook.dll",
        "lang/*"
      ],
      "windows": {
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "MFkwEwYHKoZIzj0CAQYIKoZIzj0DAQcDQgAERYYNY92IG8Vlvz45oRvrowXh3oHq26LiM8ZJ+HSGb6tPQBcoxwcJc+iL8QYKDvhWABe9W1yY0SEUrtl2pxvl7w==",
      "endpoints": [
        "https://github.com/Jay13Jeong/GBFR-logs-anti-cheat/main/update.json"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
